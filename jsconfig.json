{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./*"
            ],
            "@/*": [
                "./*"
            ],
        },
        "types": [
            "@nuxt/types",
            "@nuxtjs/i18n",
            "@nuxtjs/color-mode",
            "@pinia/nuxt"
        ],
        "jsx": "preserve",
    },
    "exclude": [
        "node_modules",
        ".nuxt",
        "dist",
        "docs"
    ],
    "include": [
        "composables/**/*",
        "querys/**/*",
        "./notebook.hdnb"
    ],
}